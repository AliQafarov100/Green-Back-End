@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <a  class="btn btn-danger" asp-controller="Slider" asp-action="Create">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Picture
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                SubTitle
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Slider slider in Model)
                        {
                            <tr>
                                <td>
                                    @slider.Id
                                </td>
                                <td>
                                    <img src="~/assets/Image/@slider.Image" alt="Alternate Text" style="width: 250px; height: 100px;"/>
                                </td>
                                <td>
                                    @slider.Title
                                </td>
                                <td>
                                    @if (slider.Description.Length > 30)
                                    {
                                        @(slider.Description.Substring(0,30) + "...")
                                    }
                                    else
                                    {
                                        @slider.Description
                                    }

                                </td>
                                <td>
                                    <div class="d-flex">
                                        <div>
                                            <a asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-primary">
                                                <i class="mdi mdi-details"></i>
                                            </a>
                                        </div>
                                        <div>
                                            <a asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id" class="btn btn-success">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                        </div>
                                        <div>
                                            <a asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-danger">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

