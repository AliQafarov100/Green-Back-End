@model List<Service>
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <a class="btn btn-danger" asp-controller="Service" asp-action="Create">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Icon
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                SubTitle
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Service service in Model)
                        {
                            <tr>
                                <td>
                                    @service.Id
                                </td>
                                <td>
                                    @service.Icon
                                </td>
                                <td>
                                    @service.Title
                                </td>
                                <td>
                                    @if (service.Description.Length > 30)
                                    {
                                        @(service.Description.Substring(0,30) + "...")
                                    }
                                    else
                                    {
                                        @service.Description
                                    }

                                </td>
                                <td>
                                    <div class="d-flex">
                                        <div>
                                            <a asp-controller="Service" asp-action="Detail" asp-route-id="@service.Id" class="btn btn-primary">
                                                <i class="mdi mdi-details"></i>
                                            </a>
                                        </div>
                                        <div>
                                            <a asp-controller="Service" asp-action="Edit" asp-route-id="@service.Id" class="btn btn-success">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                        </div>
                                        <div>
                                            <a asp-controller="Service" asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

